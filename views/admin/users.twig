{% extends "layout.twig" %}

{% block content %}
	<h2>Usuarios</h2>
	<a class="btn btn-primary" href="{{ 'admin/users/create' | url }}">Nuevo usuario</a><br><br>
	<table class="table">
		<tr>
			<th>Nombre</th>
			<th>Email</th>
			<th>Editar</th>
			<th>Borrar</th>
		</tr	>

		{% for user in users %}
			<tr>
				<td>{{ user.name }}</td>
				<td>{{ user.email }}</td>
				<td><a href="">Editar</a></td>
				<td><a href="">Borrar</a></td>
			</tr>
		{% endfor %}

	</table>
{% endblock %}

