{% extends "layout.twig" %}

{% block content %}
	{% for blogPost in blogPosts %}
		<div class="blog-post">
			<h2>{{ blogPost.title }}</h2>
			<p>March 15, 2018 by <a href="">Alex Campos</a></p>
		</div>
		{% if blogPost.img_url %}
			<div class="blog-post-image img-fluid">
				<!--Ejemplo con imagenes random: -->
				<!--https://source.unsplash.com/random/800x600 -->
				<img src="{{ blogPost.img_url }}" alt="{{ blogPost.img_url }}" style="height: 300px;width: 400px;">
			</div>
		{% endif %}
		<div class="blog-post-content">
			<p>{{ blogPost.content }}</p>
		</div>
	{% endfor %}
{% endblock %}

{% block content2 %}
	<footer>&copy; Blogitare 2018. All rights reserved. <a href="{{'admin' | url }}">Admin Panel</a></footer>
{% endblock %}
